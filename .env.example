# Kriptobot Environment Variables
# Bu dosyayı .env olarak kaydedin ve gerçek değerlerinizi girin

# API Anahtarları (Şifrelenmiş)
BINANCE_API_KEY=your_encrypted_binance_api_key_here
BINANCE_SECRET_KEY=your_encrypted_binance_secret_key_here
NEWSAPI_KEY=your_encrypted_newsapi_key_here

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_encrypted_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_encrypted_telegram_chat_id_here

# Database
DATABASE_URL=your_encrypted_database_url_here

# Encryption
ENCRYPTION_KEY=your_64_character_hex_encryption_key_here

# Trading Settings
TRADING_MODE=paper  # paper or live
MAX_POSITION_SIZE=1000
RISK_LEVEL=low      # low, medium, high

# Logging
LOG_LEVEL=info      # debug, info, warn, error
LOG_TO_FILE=true

# System Settings
PORT=3000
NODE_ENV=development

# LIVIA System
LIVIA_ENABLED=true
LIVIA_LOG_LEVEL=info